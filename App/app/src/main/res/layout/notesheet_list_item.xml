<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:orientation="horizontal" android:layout_width="218dp"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:weightSum="1">

        <ImageView
            android:layout_width="66dp"
            android:layout_height="79dp"
            card_view:srcCompat="@drawable/ic_select_file"
            android:id="@+id/iconView"
            android:contentDescription="Icon for Notesheet or Directory." />

        <TextView
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:id="@+id/noteSheetNameView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2.45" />

    </LinearLayout>

</android.support.v7.widget.CardView>